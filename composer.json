    "autoload": {
        "psr-4": { "BenGor\\User\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "BenGor\\User\\spec\\": "spec/" }
    },
    "config": {
        "bin-dir": "bin"
    }
