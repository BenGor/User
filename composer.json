{
    "name": "bengor/user",
    "description": "Lightweight user library developed using Domain-Driven Design",
    "keywords": ["user", "component", "ddd"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php": ">=5.4",

        "carlosbuenosvinos/ddd": "^1.2",
        "ramsey/uuid": "^3.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "^1.10",
        "mmoreram/php-formatter": "^1.0",
        "phpspec/phpspec": "^2.3"
    },
    "scripts": {
        "cs": [
            "php-cs-fixer fix --config-file=.php_cs",
            "php-cs-fixer fix --config-file=.phpspec_cs",
            "php-formatter f:h:f src",
            "php-formatter f:h:f spec",
            "php-formatter f:u:s src",
            "php-formatter f:u:s spec"
        ],
        "test": "phpspec run"
    },
    "suggest": {
        "doctrine/orm": "Required to persist users using Doctrine repository",
        "mandrill/mandrill": "Required to send emails using Mandrill adapter",
        "swiftmailer/swiftmailer": "Required to send emails using Swiftmailer adapter",
        "symfony/security-core": "Required to encode user passwords using Symfony adapter"
    },
    "autoload": {
        "psr-4": {
            "BenGor\\User\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\BenGor\\User\\": "spec/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
