{
    "name": "bengor/user",
    "description": "Lightweight user library developed using Domain-Driven Design",
    "keywords": ["user", "component", "ddd"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php": ">=5.4",

        "carlosbuenosvinos/ddd": "^1.2",
        "ramsey/uuid": "^3.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "^1.10",
        "mmoreram/php-formatter": "^1.0",
        "phpspec/phpspec": "^2.3"
    },
    "suggest": {
        "doctrine/orm": "Required to use doctrine persistence implementation",
        "mandrill/mandrill": "Required to send emails using Mandrill adapter",
        "swiftmailer/swiftmailer": "Required to send emails using Swiftmailer adapter"
    },
    "autoload": {
        "psr-4": {
            "BenGor\\User\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\BenGor\\User\\": "spec/"
        }
    }
}
